---
import '../styles/global.css';

interface Props {
	title: string;
	date?: string;
	description: string;
	image?: string;
}

const { title, description } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="date" content={date} />
<meta name="description" content={description} />
<meta name="image" content={image} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/Roboto-Medium.ttf" as="font" type="font/ttf" crossorigin />
<link rel="preload" href="/fonts/Roboto-Light.ttf" as="font" type="font/ttf" crossorigin />
<link rel="preload" href="/fonts/Inter-Medium.ttf" as="font" type="font/ttf" crossorigin />
<link rel="preload" href="/fonts/Inter-SemiBold.ttf" as="font" type="font/ttf" crossorigin />
<link rel="preload" href="/fonts/AmaticSC-Regular.ttf" as="font" type="font/ttf" crossorigin />
<link rel="preload" href="/fonts/OpenSans-CondLight.ttf" as="font" type="font/ttf" crossorigin />
